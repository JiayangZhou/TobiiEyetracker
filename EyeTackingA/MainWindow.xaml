<Window x:Class="EyeTackingA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeTackingA"
        mc:Ignorable="d"
        AllowsTransparency="True" 
        WindowStyle="None" Background="Transparent" >
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Name="CalibrateEnter" Height="50" Width="50" Click="CalibrateEnter_Click" VerticalAlignment="Top" Margin="30"/>
        <Button Name="CalibrateLeave" Height="50" Width="50" Click="CalibrateLeave_Click" VerticalAlignment="Bottom" Margin="30"/>
        <TextBlock Name="CoPoint" Foreground="Green" FontWeight="Bold" FontSize="40" VerticalAlignment="Center"/>
        <TextBlock Name="Connect" Foreground="Green" FontWeight="Bold" FontSize="40" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
